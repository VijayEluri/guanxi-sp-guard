<Guard xmlns="urn:guanxi:sp">
  <GuardInfo>
    <HostName>protectedapp.uni.ac.uk</HostName>
    <ID>protectedapp-guard</ID>
    <AttributePrefix>HTTP_</AttributePrefix>
  </GuardInfo>

  <Cookie>
    <Domain>.uni.ac.uk</Domain>
    <Path>/</Path>
    <Age units="transient" />
    <Prefix>GUANXI_GUARD_SERVICE_PROVIDER_</Prefix>
  </Cookie>

  <EngineInfo>
    <AuthConsumerURL>http://localhost/samlengine/shibb/acs</AuthConsumerURL>
    <WAYFLocationService>http://localhost/samlengine/shibb/wayf-location</WAYFLocationService>
    <Timeout>10</Timeout>
  </EngineInfo>

  <TrustStore>__GUARD_APP_ROOT__/WEB-INF/guanxi_sp_guard/truststore/guard.jks</TrustStore>
  <TrustStorePassword>changeme</TrustStorePassword>

  <Keystore>__GUARD_APP_ROOT__/WEB-INF/guanxi_sp_guard/keystore/guard.jks</Keystore>
  <KeystorePassword>changeme</KeystorePassword>
  <CertificateAlias>webservices</CertificateAlias>

  <Profiles>
    <Profile url="^(/\w*)(/free/.*)" profile="none" />
    <Profile url="^(/\w*)(/protected/.*)" profile="shibboleth" />
    <Profile url="^(/\w*)/(s2wbsso)/(.*)(/protected/.*)" profile="saml2-web-browser-sso" />
  </Profiles>
</Guard>
