<Guard xmlns="urn:guanxi:sp">
  <GuardInfo>
    <HostName>protectedapp.uni.ac.uk</HostName>
    <ID>protectedapp-guard</ID>
    <AttributePrefix>HTTP_</AttributePrefix>
    <!--
    <DefaultEntityID>ENTITYID_OF_IDP</DefaultEntityID>
    -->
  </GuardInfo>

  <Cookie>
    <Domain>.uni.ac.uk</Domain>
    <Path>/</Path>
    <Age units="transient" />
    <Prefix>GUANXI_GUARD_SERVICE_PROVIDER_</Prefix>
  </Cookie>

  <EngineInfo>
    <GPSService>https://localhost/samlengine/gps</GPSService>
    <Timeout>10</Timeout>
  </EngineInfo>
</Guard>
